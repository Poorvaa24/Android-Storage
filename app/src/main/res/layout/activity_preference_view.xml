<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/txt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/imageview"
        android:text="Preference View"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="81dp"
        android:fontFamily="sans-serif-black"
        android:text="Android Book Name "
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="81dp"
        android:layout_toRightOf="@+id/txt_name"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textMultiLine"></EditText>

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Android Book Author "
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_author"
        android:layout_width="130dp"
        android:layout_height="46dp"
        android:layout_below="@+id/input_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/txt_author"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textMultiLine"></EditText>

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_author"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Description"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/input_desc"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:layout_below="@+id/input_author"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/txt_desc"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textMultiLine"></EditText>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_blg"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp"
        android:background="@color/colorAccent"
        android:text="Save"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_blg"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:layout_toRightOf="@+id/btn_save"
        android:background="@color/colorAccent"
        android:onClick="finishActivity"
        android:text="Cancel"
        android:textColor="#000000"/>


</RelativeLayout>